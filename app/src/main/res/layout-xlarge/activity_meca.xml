<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MecaActivity"
    android:background="@color/mainbackground">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout12"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="675dp"
            android:layout_height="186dp"
            android:background="@drawable/logotemplateemecas"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:id="@+id/clavier1btn"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginTop="124dp"
        android:background="@drawable/logorectangle"
        android:clickable="true"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout12">

        <TextView
            android:id="@+id/clavier1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="clavier1"
            android:textStyle="bold"
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/prix_clavier1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="prix clavier2"
            android:textStyle="bold"
            android:textSize="20dp"/>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/clavier2btn"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="@drawable/logorectangle"
        android:clickable="true"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/clavier1btn"
        app:layout_constraintVertical_bias="0.358">

        <TextView
            android:id="@+id/clavier2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="clavier1"
            android:textStyle="bold"
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/prix_clavier2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="prix clavier2"
            android:textStyle="bold"
            android:textSize="20dp"/>


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>