<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MembActivity"
    android:background="@color/mainbackground">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/clavier1btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.095">

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="454dp"
            android:layout_height="123dp"
            android:background="@drawable/logotemplatemembrane"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.491"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.027" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:id="@+id/clavier1btn"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginBottom="112dp"
        android:background="@drawable/logorectangle"
        android:clickable="true"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/clavier2btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/clavier1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="clavier1"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/prix_clavier1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="prix clavier2"
            android:textSize="20dp"
            android:textStyle="bold" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/clavier2btn"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginBottom="212dp"
        android:background="@drawable/logorectangle"
        android:clickable="true"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/clavier2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="clavier1"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/prix_clavier2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="prix clavier2"
            android:textSize="20dp"
            android:textStyle="bold" />


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>